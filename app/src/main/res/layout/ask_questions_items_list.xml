<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="@drawable/round_ask_questions">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:orientation="horizontal">
      <TextView
          android:id="@+id/txtName"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/text"
          android:text="Mr Rao"
          android:fontFamily="@font/teachers_semibold"
          android:textSize="15sp"/>
      <TextView
          android:id="@+id/txtDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_gravity="center_vertical"
          android:gravity="end"
          android:textColor="@color/text"
          android:text="June 12, 2024"
          android:fontFamily="@font/teachers_regular"
          android:textSize="13sp"/>
  </LinearLayout>

    <TextView
        android:id="@+id/txtQs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="Hello, is it negotiable?"
        android:fontFamily="@font/teachers_regular"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/txtAns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="5dp"
        android:textColor="@color/black"
        android:text="Yes, are you interested?"
        android:fontFamily="@font/teachers_regular"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="end"
        android:background="@drawable/round_ask_questions_gray">
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/blue"
            android:text="Open"
            android:fontFamily="@font/teachers_regular"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>