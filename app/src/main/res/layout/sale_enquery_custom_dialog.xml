<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/close_ic"
        android:layout_gravity="end"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enquiry Now"
        android:fontFamily="@font/teachers_bold"
        android:textColor="@color/blue"
        android:textSize="18dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill the below details"
        android:fontFamily="@font/teachers_semibold"
        android:textColor="@color/gray"
        android:textSize="13dp"
        android:textAlignment="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:hintEnabled="false"
        style="@style/MyDenseOutlined"
        app:boxBackgroundColor="@color/box_gray"
        app:boxStrokeColor="@color/box_border"
        app:boxStrokeWidth="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/teachers_regular"
            android:hint="Name"
            android:textColorHint="@color/hintcolor"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:hintEnabled="false"
        style="@style/MyDenseOutlined"
        app:boxBackgroundColor="@color/box_gray"
        app:boxStrokeColor="@color/box_border"
        app:boxStrokeWidth="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/teachers_regular"
            android:hint="Phone Number"
            android:inputType="number"
            android:maxLength="10"
            android:textColorHint="@color/hintcolor"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:hintEnabled="false"
        style="@style/MyDenseOutlined"
        app:boxBackgroundColor="@color/box_gray"
        app:boxStrokeColor="@color/box_border"
        app:boxStrokeWidth="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/teachers_regular"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/hintcolor"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        app:hintEnabled="false"
        style="@style/MyDenseOutlined"
        app:boxBackgroundColor="@color/box_gray"
        app:boxStrokeColor="@color/box_border"
        app:boxStrokeWidth="0dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messageEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:hint="Write a message"
            android:fontFamily="@font/teachers_regular"
            android:layout_gravity="start"
            android:gravity="start"
            android:textColorHint="@color/hintcolor"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogin"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="35dp"
        app:cardElevation="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:fontFamily="@font/teachers_medium"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>